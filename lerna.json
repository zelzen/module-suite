{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.test.*", "*.test.js", "**/__tests__/**", ".gitignore", "*.html", "examples/**"],
      "message": "chore(release): publish",
      "push": false
    }
  }
}
