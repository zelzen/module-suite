{
  "name": "module-suite",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zelzen/module-suite"
  },
  "contributors": [
    "Gabe Meola <hey@gabe.mx>"
  ],
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/dist/"
    ],
    "modulePaths": [
      "<rootDir>/packages"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "jest",
    "lint": "eslint \"./**/*.{ts,js}\"",
    "lint:fix": "yarn lint --fix",
    "release": "lerna publish --yes --conventional-commits --registry https://registry.npmjs.org/",
    "releasexx": "lerna publish --yes --conventional-commits --create-release github"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-typescript": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^10.17.5",
    "@zelz/eslint-config": "^3.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "builtins": "^2.0.1",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rollup": "^1.27.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-extensions": "^0.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-typescript": "^1.2.1",
    "ts-jest": "^24.1.0",
    "typescript": "^4.0.0"
  }
}
